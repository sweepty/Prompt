extends ../layout/emp_layout.pug

block content
  h1= title

  .card.mb-3
    .card-header
      i.fa.fa-table
      |  project list
    .card-body
      .table-responsive
        a.btn.btn-outline-primary.mb-3(href='/project/new') 프로젝트 등록
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th 프로젝트 id
              th 프로젝트 명
              th 시작일
              th 종료일
            tbody
              each pro in projects
                tr
                  td= pro.project_id
                  td
                    a.title(href=`/project/${pro.project_id}`)=pro.name
                  td= pro.start_date
                  td= pro.end_date


  
