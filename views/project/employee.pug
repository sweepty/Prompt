extends ../layout/emp_layout.pug

block content
  h1= title
  .card.mb-3
    .card-header
      i.fa.fa-table
      |  project list
    .card-body
      .table-responsive
        h3 참가 중인 프로젝트
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th id
              th project name
              th job
              th project start date
          tbody
            each pro in inProgress
              tr
                td= pro.project_id
                td
                  a.title(href=`/project/${pro.project_id}`)=pro.name
                td= pro.job
                td= pro.start_date
        
        h3 완료한 프로젝트
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th id
              th project name
              th job
              th project start date
              th project end date
              th 평가
          tbody
            each pro in done
              tr
                td= pro.project_id
                td
                  a.title(href=`/project/${pro.project_id}`)=pro.name
                td= pro.job
                td= pro.start_date
                td= pro.end_date
                td
                  a.btn.btn-outline-info(href=`/evaluation/${pro.project_id}`) 평가하기
                  
        h3 시작 전인 프로젝트
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th id
              th project name
              th job
              th project start date
              th project end date
          tbody
            each pro in notyet
              tr
                td= pro.project_id
                td
                  a.title(href=`/project/${pro.project_id}`)=pro.name
                td= pro.job
                td= pro.start_date
                td= pro.end_date
                td
                  a.btn.btn-outline-info(href=`/evaluation/${pro.project_id}`) 평가하기

  
