extends ../layout/emp_layout.pug

block content
  h1= title
  .card.mb-3
    .card-header
      i.fa.fa-table
      |  project list
    .card-body
      .table-responsive
        h3 참가 중인 프로젝트
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th ID
              th 프로젝트 명
              th 직무
              th 시작일
          tbody
            each pro in inProgress
              tr
                td= pro.project_id
                td
                  a.title(href=`/project/${pro.project_id}`)=pro.name
                td= pro.job
                td= moment(pro.start_date).locale('ko').format('YYYY년 MMMM Do')
        
        h3 완료한 프로젝트
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th ID
              th 프로젝트 명
              th 직무
              th 시작일
              th 종료일
              th 평가
          tbody
            each pro in done
              tr
                td= pro.project_id
                td
                  a.title(href=`/project/${pro.project_id}`)=pro.name
                td= pro.job
                td= moment(pro.start_date).locale('ko').format('YYYY년 MMMM Do')
                td= moment(pro.end_date).locale('ko').format('YYYY년 MMMM Do')
                td
                  a.btn.btn-outline-info(href=`/evaluation/${pro.project_id}`) 평가하기
                  
        h3 시작 전인 프로젝트
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th ID
              th 프로젝트 명
              th 직무
              th 시작일
              th 종료일
          tbody
            each pro in notyet
              tr
                td= pro.project_id
                td
                  a.title(href=`/project/${pro.project_id}`)=pro.name
                td= pro.job
                td= moment(pro.start_date).locale('ko').format('YYYY년 MMMM Do')
                td= moment(pro.end_date).locale('ko').format('YYYY년 MMMM Do')
                td
                  a.btn.btn-outline-info(href=`/evaluation/${pro.project_id}`) 평가하기

  
