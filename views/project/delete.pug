extends ../layout/emp_layout

block content
  .container
    .card.mb-3
      .card-header
        i.fa.fa-table
        |  프로젝트 삭제
        .card-body
          .table-responsive
            h3 프로젝트 삭제
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr
                  th ID
                  th 프로젝트 명
                  th 시작일
                  th 종료일
                  th 가격
                  th 삭제
              tbody
                each pro in project
                  tr
                    td= pro.project_id
                    td= pro.name
                    td= moment(pro.start_date).locale('ko').format('YYYY년 MMMM Do')
                    td= moment(pro.end_date).locale('ko').format('YYYY년 MMMM Do')
                    td= pro.price
                    
                    td
                      a.btn.btn-danger.need-confirm-btn(href=`/project/${project.id}?_method=delete`) 삭제