extends ../layout/emp_layout

block content
  .container
    .card.mb-3
      .card-header
        i.fa.fa-table
        |  프로젝트 수정
        .card-body
          .table-responsive
            h3 프로젝트 수정
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr
                  th ID
                  th 프로젝트 명
                  th 시작일
                  th 종료일
                  th 가격
                  th 수정하기
              tbody
                each pro in project
                  tr
                    form(action=`/project/edit`, method='POST')
                      td= pro.project_id
                        .form-group
                          input.form-control(id='project_id', name='project_id', value= pro.project_id,hidden="true")
                      td= pro.name
                      td
                        .form-group
                          input.form-control(type='date', id='start_date', name='start_date', placeholder='start_date')
                          input.form-control(type='time', id='start_time', name='start_time', placeholder='start_time')
                      td
                        .form-group
                          input.form-control(type='date', id='end_date', name='end_date', placeholder='end_date')
                          input.form-control(type='time', id='end_time', name='end_time', placeholder='end_time')
                      td
                        .form-group
                          input.form-control(id='price', name='price', value= price)

                      td
                       button.btn.btn-primary(type='submit') 수정하기