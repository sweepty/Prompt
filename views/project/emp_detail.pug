extends ../layout/emp_layout.pug

block content
  h1= title

  .card.mb-3
    .card-header
      i.fa.fa-table
      |  project detail
    .card-body
      h1 #{client.p_name}
      br
      h3 프로젝트 상세 내용
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th 발주처
              th 매니저
              th 매니저 email
              th 시작일
              th 종료일

            tbody
              tr
                td= client.c_name
                td= client.manager
                td= client.m_email
                td= client.start_date
                td= client.end_date == null ? '진행중': client.end_date
      br
      h3 내 정보
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th 이름
              th 직무
              th 시작일
              th 종료일
            tbody
              each m in my
                tr
                  td= m.name
                  td= m.job
                  td= m.start_date
                  td= m.end_date == null ? '진행중': m.end_date

      h3 참여직원 리스트
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th 직원명
              th 직무
              th 시작일
              th 종료일
              th 평가하기
            tbody
              each pro in project
                tr
                  td= pro.name
                  td= pro.job
                  td= pro.start_date
                  td= pro.end_date == null ? '진행중': pro.w_end_date
                  td
                    case pro.EA
                      when 1
                        a.btn.btn-outline-info(href='/evaluation/${pro.project_id}') 평가
                      when 0
                        button.btn.btn-default(disabled='disabled') 평가불가

                  
