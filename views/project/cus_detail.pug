extend ../layout/cus_layout.pug

block content
  h1= client.p_name
  br
  .card.mb-3
    .card-header
      i.fa.fa-table
      |  프로젝트 상세
    .card-body
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th ID
              th 프로젝트 명
              th 시작일
              th 종료일
              th 매니저 이름
              th 매니저 이메일
            tbody
              tr
                td= client.p_id
                td= client.p_name
                td= client.start_date
                td= client.end_date
                td= client.manager
                td= client.m_email
  .card.mb-3
    .card-header
      i.fa.fa-table
      |  프로젝트 참여 직원
    .card-body
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th ID
              th 직원 명
              th 시작일
              th 종료일
              th 평가하기
            tbody
              each pro in project
                tr
                  td= pro.employee_id
                  td= pro.name
                  td= pro.start_date
                  td= pro.end_date == null ? '진행 중' : pro.end_date
                  td
                    case pro.EA
                      when 1
                        a.btn.btn-outline-info(href=`/evaluation/${client.p_id}/form/${pro.employee_id}`) 평가하기
                      when 0
                        button.btn.btn-default(disabled='disabled') 평가 불가

                    


                