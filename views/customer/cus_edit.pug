extends ../layout/emp_layout

block content
  .container
    .card.mb-3
      .card-header
        i.fa.fa-table
        |  발주처 수정
        .card-body
          .table-responsive
            h3 발주처 수정
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr
                  th 발주처명
                  th 전화번호
                  th 주소
                  th 담당자 이름
                  th 담당자 이메일
                  th 수정하기
              tbody
                  tr
                    form(action='/client/${client.id}/edit', method='POST')
                      td= client.name
                        .form-group
                          input.form-control(id='name', name='name', value= client.name, hidden="true")
                      td
                        .form-group
                          input.form-control(id='tel', name='tel')
                      td
                        .form-group
                          input.form-control(id='address', name='address')
                      td
                        .form-group
                          input.form-control(id='manager', name='manager')
                      td
                        .form-group
                          input.form-control(id='email', name='email')
                      
                      td
                       button.btn.btn-primary(type='submit') 수정하기