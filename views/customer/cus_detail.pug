extends ../layout/emp_layout.pug

block content
  h1= title
  .card.mb-3
    .card-header
      i.fa.fa-table
      | client list
    .card-body
      .table-responsive
        h3 #{client[0].name}
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th 프로젝트 아이디
              th 프로젝트 이름
              th 시작일
              th 종료일
              th 매니저 이름
              th 매니저 이메일
              th 가격

          tbody
            each c in client
              tr
                td= c.project_id
                td
                  a.title(href=`/project/${c.project_id}`)=c.name
                td= c.start_date 
                td= c.end_date 
                td= c.manager
                td= c.email
                td= c.price
                     
    
  
