extends ../layout/emp_layout.pug

block content
  h1= title
  .card.mb-3
    .card-header
      i.fa.fa-table
      | client detail
    .card-body
      .table-responsive
        h3 #{client[0].name}
        br
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th 프로젝트 ID
              th 프로젝트 이름
              th 시작일
              th 종료일
              th 담당자 이름
              th 담당자 Email
              th 가격

          tbody
            each p in projects
              tr
                td= p.p_id
                td
                  a.title(href=`/project/${p.p_id}`)= p.p_name
                td= p.start_date 
                td= p.end_date 
                td= p.manager
                td= p.email
                td= p.price
                     
    
  
