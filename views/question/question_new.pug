extends ../layout/emp_layout

block content
  .container
    .card.mb-3
      .card-header
        i.fa.fa-table
        |  질문 추가하기
        .card-body
          .table-responsive
            h3 질문 추가하기
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr
                  th ID
                  th 질문항목
                  th 점수
                  th 코멘트
              tbody
                each q in questions
                  tr
                    form(action=`/`, method='POST')
                      td
                        p= q.question_id
                        .form-group
                          input.form-control(type='text', id='question_id', name='question_id',value=q.question_id, hidden= true)
                      td= q.question
                      td
                        .form-group
                          input.form-control(type='number', id='score', name='score', min="1" max="10", placeholder='score')
                      td
                        .form-group
                          textarea.form-control(id='content', name='content', placeholder='content')
                  |
                  button.btn-primary.btn-lg(type='submit') 질문 추가


