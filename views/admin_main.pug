extend layout/emp_layout.pug

block content
  // Breadcrumbs
  ol.breadcrumb
    li.breadcrumb-item
      a(href='#') Dashboard
    li.breadcrumb-item.active Charts
  // Area Chart Example
  .card.mb-3
    .card-header
      i.fa.fa-area-chart
      |  매출 현황
    .card-body
      canvas#myAreaChart(width='100%', height='30')
  .row
    .col-lg-8
      // Example Bar Chart Card
      .card.mb-3
        .card-header
          i.fa.fa-bar-chart
          |  고객 만족도
        .card-body
          canvas#myBarChart(width='100', height='50')
    .col-lg-4
      // Example Pie Chart Card
      .card.mb-3
        .card-header
          i.fa.fa-pie-chart
          |  프로젝트 진행 현황
        .card-body
          canvas#myPieChart(width='100%', height='100')
  
  
    script(src='vendor/chart.js/Chart.min.js')          
    script(src='js/sb-admin-charts.js')
