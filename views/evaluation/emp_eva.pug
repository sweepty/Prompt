extends ../layout/emp_layout.pug

block content
  h1.main-title 평가 작성
  .container
    .card.mb-3
      .card-header
        .card-body
          .table-responsive
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr 
                  th No.
                  th 프로젝트명
                  th 직원명
                  th 업무 시작일
                  th 업무 종료일
              tbody
                each p in project
                    tr
                      td= p.project_id
                      td= p.name
                      td= p.start_date
                      td= p.end_date
    .card.mb-3
      .card-header
        .card-body
          .table-responsive
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr 
                  th No.
                  th 프로젝트명
                  th 점수
                  th 코멘트
              tbody
                form(action=`/evaluation/${project[0].project_id}/form/${evaluated_id}`, method='POST')
                  each q in questions
                    tr
                      td
                        p= q.question_id
                        .form-group
                          input.form-control(type='text', id='question_id', name='question_id',value=q.question_id, hidden= true)
                      td= q.question
                      td
                        .form-group
                          input.form-control(type='number', id='score', name='score', min="1" max="10", placeholder='score')
                      td
                        .form-group
                          textarea.form-control(id='content', name='content', placeholder='content')
                  |
                  button.btn-primary.btn-lg(type='submit') 평가 등록