extends ../layout/emp_layout.pug

block content
  h1.main-title 평가 가능 프로젝트 목록
  .container
    .card.mb-3
      .card-header
        .card-body
          .table-responsive
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr 
                  th ID
                  th 프로젝트명
                  th 시작일
                  th 종료일
                  th 평가하기
              tbody
                each p in projects
                  tr 
                    td= p.project_id
                    td= p.name
                    td= moment(p.start_date).locale('ko').format('YYYY년 MMMM Do')
                    td= moment(p.end_date).locale('ko').format('YYYY년 MMMM Do')
                    td
                      a.btn.btn-outline-info(href=`/evaluation/${p.project_id}`) 평가하기


