extends ../layout/emp_layout.pug

block content
  h1.main-title 프로젝트 별 평가 조회
  .container
    .card.mb-3
      .card-header
        h3 평가 순위 (평균)
      .card-body
          .table-responsive
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr 
                  th 직원번호
                  th 직원명
                  th 점수

              tbody
                each eva in avg
                  tr 
                    td= eva.employee_id
                    td= eva.name
                    td= eva.score
    .card.mb-3
      .card-header
        h3 pm 평가
      .card-body
          .table-responsive
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr 
                  th 직원번호
                  th 직원명
                  th 질문 내용
                  th 점수
                  th 코멘트
              tbody
                each pm in eva_pm
                  tr 
                    td= pm.employee_id
                    td= pm.name
                    td= pm.question
                    td= pm.score
                    td= pm.content
    .card.mb-3
      .card-header
        h3 동료 평가
      .card-body
          .table-responsive
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr 
                  th 직원번호
                  th 직원명
                  th 질문 내용
                  th 점수
                  th 코멘트
              tbody
                each peer in eva_peer
                  tr 
                    td= peer.employee_id
                    td= peer.name
                    td= peer.question
                    td= peer.score
                    td= peer.content
    .card.mb-3
      .card-header
        h3 고객 평가
      .card-body
          .table-responsive
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr 
                  th 직원번호
                  th 직원명
                  th 질문 내용
                  th 점수
                  th 코멘트
              tbody
                each client in eva_client
                  tr 
                    td= client.employee_id
                    td= client.name
                    td= client.question
                    td= client.score
                    td= client.content
