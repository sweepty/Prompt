extends ../layout/emp_layout

block content
  .container
    .card.mb-3
      .card-header
        i.fa.fa-table
        |  직원 삭제
        .card-body
          .table-responsive
            h3 직원 삭제
            table#dataTable.table.table-bordered(width='100%', cellspacing='0')
              thead
                tr
                  th 발주처명
                  th 전화번호
                  th 주소
                  th 담당자 이름
                  th 담당자 이메일
                  th 삭제
              tbody
                each c in client
                  tr
                    form(action='/client/delete', method='POST')
                      td= c.name
                      td= c.tel
                      td= c.address
                      td= c.manager
                      td= c.email
                      
                      td
                        a.btn.btn-danger.need-confirm-btn(href=`/project/${client.id}?_method=delete`) 삭제